{
    "version": "0.1.0",
    "command": "g++",
    "args": ["-Wall", "-std=c++11", "-Wextra", "-O2", "src/main.cpp", "src/configuration/parseur.cpp", "-o", "bin/ensolement"],
    "showOutput": "silent",
    "problemMatcher": [{
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "severity": "error",
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(erreur):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
        }
    },{
        "owner": "cpp",
        "fileLocation": ["relative", "${workspaceRoot}"],
        "severity": "warning",
        "pattern": {
            "regexp": "^(.*):(\\d+):(\\d+):\\s+(attention ):\\s+(.*)$",
            "file": 1,
            "line": 2,
            "column": 3,
            "message": 5
        }
    }
    ]
}